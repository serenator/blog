<h1>Listing posts</h1>
<%= link_to 'New Post', new_post_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>

	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td style="padding:0 15px 0 15px;"><%= link_to 'Show', post %></td>
    		<td style="padding:0 15px 0 15px;"><%= link_to 'Edit', edit_post_path(post) %></td>
    		<td style="padding:0 15px 0 15px;"><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		 <% end %>





</table>